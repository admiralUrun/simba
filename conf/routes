
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
# CUSTOMERS ––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––
GET     /customers                  controllers.CustomerController.toCustomersListPage
GET     /searchInCustomes           controllers.CustomerController.search(search)
GET     /addCustomer                controllers.CustomerController.toCreateCustomerPage()
GET     /editCustome/:id            controllers.CustomerController.toEditCustomerPage(id: Int)
POST    /newCustomer                controllers.CustomerController.createCustomer()
POST    /updateCustomer/:id             controllers.CustomerController.update(id: Int)
#---------------------------------------------------------------------------------------------
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


